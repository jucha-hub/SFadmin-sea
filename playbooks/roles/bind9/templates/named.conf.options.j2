# ~/ansible-bind9/roles/bind9/templates/named.conf.options.j2
options {
    directory "/var/cache/bind";

    recursion yes;                 # allows clients to make recursive queries
    allow-recursion { any; };      # allow recursion for all clients

    dnssec-validation auto;

    auth-nxdomain no;    # conform to RFC1035
    listen-on-v6 { any; };
};
